@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/styles.css" rel="stylesheet" />
</head>
<body>
    <div style="height: 100%;">
        <div class="registration_form">
            <form method="post" action="Handlers/VisitorActionHandler/Registration.cshtml">
                <h3 class="text-info">Registration Page</h3>
                <hr />
                <div class="form-group">
                    <label for="loginInput">Username:</label>
                    <input id="loginInput" required="" class="form-control" type="text" name="login" />
                </div>
                <div class="form-group">
                    <label for="passwordInput">Password:</label>
                    <input id="passwordInput" class="form-control" required="" type="password" name="password" />
                </div>
                <div class="text-center">
                    <input type="submit" class="btn btn-info" value="Register" />
                </div>
            </form>
            <div class="regRef">
                <a href="/Pages/LogInPage.cshtml">Log In</a>
            </div>
        </div>
    </div>
</body>
</html>
